<%- include("header") -%>

  <div class="box" id="heading">
    <h1><%= listTitle %></h1>
  </div>

  <div class="box">
    <% for (var i = 0; i < newListItems.length; i++) { %>
    <div class="item fullLine">
      <div class="item">
        <input type="checkbox">
        <p><%= newListItems[i] %></p>
      </div>
      <div class="icons">
        <div class="trashIcon">
          <form class="formTrashIcon" action="/" method="post">
            <input type="hidden" name="whichList" value=<%= listTitle %>>
            <button class="colorTrashIcon" type="submit" name="trashClick" value="<%= newListItems[i] %>" >
                <i class="fas fa-trash-alt"></i>
            </button>
          </form>
        </div>
         <div class="hideIcon">
           <form class="formHideIcon" action="/" method="post">
             <input type="hidden" name="whichList" value=<%= listTitle %>>
             <button class="colorHideIcon" type="submit" name="hideClick" value="<%= newListItems[i] %>">
                 <i class="far fa-eye-slash"></i>
             </button>
           </form>
         </div>
      </div>
    </div>
    <% } %>
    <form class="itemForm" action="/" method="post">
      <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
      <button class="plusButton" type="submit" name="list" value=<%= listTitle %>>+</button>
    </form>
  </div>

<%- include("footer") -%>
